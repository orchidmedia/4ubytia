                    </div>
                </div>
            </div>
            <div class="{{ container }} sf__header-main-menu relative z-[1]">
                {% render 'header-logo', header_settings: section.settings %}
                {% render 'header-main-menu-container', section: section, justify: 'justify-center', box_size: '-mx-4' %}
                <div class="flex justify-end sf-options-wrapper__desktop items-center">
                    {% if show_account_icon %}
                        {% render 'header-option-item__account', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                    {% endif %}
                    {% if show_wishlist_icon %}
