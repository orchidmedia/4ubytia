            {% assign box_size = container | append: ' -mx-4' %}
            <div class="sf-menu-bar bg-color-menubar-background text-color-menubar">
                {% render 'header-main-menu-container', section: section, box_size: box_size %}
            </div>

            {% when 'logo-left-menu-left-offset' %}
            <div class="{{ container }} relative z-[1]">
                <div class="sf-menu-logo-bar flex -mx-4 items-center">
                    {% render 'header-logo', header_settings: section.settings, box_size: 'flex-0 mr-8', justify: 'justify-start' %}
                    {% render 'header-main-menu-container', section: section, box_size: 'flex-grow-[2] flex-shrink', justify: 'justify-start' %}
                    <div class="flex flex-1 justify-end items-center">
                        {% if show_language_switcher %}
