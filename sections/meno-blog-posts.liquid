<!-- Initialize Swiper -->
<script>

    const menoBlogPostSwiperContainers = document.querySelectorAll('#sf__blog-post-{{ section.id }} .blog-post-swiper-container');

    menoBlogPostSwiperContainers.forEach(singleSwiper => {
		const swiperEle = singleSwiper.querySelector('.blog-post-swiper');
        const pagination = singleSwiper.querySelector('.swiper-pagination');
        const arrowPrev = singleSwiper.querySelector('.swiper-button-prev');
        const arrowNext = singleSwiper.querySelector('.swiper-button-next');

        new Swiper(swiperEle, {
            slidesPerView: 1.2,
            spaceBetween: {{ st.mobile_gap }},
            pagination: {
                el: pagination,
                clickable: true
            },
            breakpoints: {
                992: {
                    slidesPerView:{% if st.limit >= 4 %}4
                    {% else %}
                        3
                    {% endif %},
                    spaceBetween: {{ st.column_gap }},
                    navigation: {
                        nextEl: arrowNext,
                        prevEl: arrowPrev
                    },
                    pagination: {
                        el: pagination
                    }
                }
            }
        });
    })
</script>

<style>
    #sf__blog-post-{{ section.id }} .swiper-pagination-bullet {
        background: none;
        border: 1px solid #807f79;
        opacity: 1;
        margin: 2px 4px;
    }

    #sf__blog-post-{{ section.id }} .swiper {
        padding-bottom: 70px;
    }
