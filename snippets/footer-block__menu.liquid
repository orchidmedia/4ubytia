{% assign menu = linklists[block.settings.menu] %}
{% if menu.links != blank %}
    <ul class="{% if block.settings.title != blank or block_title != blank %}sf__accordion-content{% endif %} sf__footer-block-content">
        <div class="mt-3 md:mt-0 md:pb-0">
            {% for link in menu.links %}
                <li class="link-lv2 hover-underline">
                    <a href="{{ link.url }}">
                        {{ link.title }}
                    </a>
                </li>
            {% endfor %}
        </div>
    </ul>
{% endif %}
