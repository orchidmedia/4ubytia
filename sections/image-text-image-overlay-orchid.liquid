<div class="grid grid-cols-1 md:grid-cols-2 md:m-24">
    <!-- Left Side (Text Content with Image) -->
    <div class="relative flex flex-col items-center justify-center bg-gray-100 h-full mr-1">
    {% if section.settings.image_left %}
        <img src="{{ section.settings.image_left | img_url: 'master' }}" alt="Left Image" class="w-full h-2/3">
    {% endif %}
    <div class="relative z-10 bg-white bg-opacity-75 rounded  h-1/3">
        <h2 class="text-5xl font-bold mb-4">{{ section.settings.title }}</h2>
        <p class="mb-4 w-3/5 text-base">{{ section.settings.description }}</p>
        <a href="{{ section.settings.button_link }}" class="button sf__btn sf__btn-blank-light text-base text-black px-4 py-2 rounded-3xl">{{ section.settings.button_text }}</a>
    </div>
    </div>

    <!-- Right Side (Image) -->
    <div class="relative">
    {% if section.settings.image %}
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="Right Image" class="w-full h-full object-cover">
    {% endif %}
    <div class="absolute bottom-4 left-4 p-4 rounded flex justify-center items-center w-full text-white">
        <p class="text-6xl font-bold">{{ section.settings.overlay_text_large }}</p>
        <p class="text-2xl w-2/5 pl-4" >{{ section.settings.overlay_text_small }}</p>
    </div>
    </div>
</div>

{% schema %}
    {
      "name": "Custom Section",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Right Image"
        },
        {
          "type": "image_picker",
          "id": "image_left",
          "label": "Left Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Lorem ipsum dolor"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "overlay_text_large",
          "label": "Overlay Text Large",
          "default": "100%"
        },
        {
          "type": "text",
          "id": "overlay_text_small",
          "label": "Overlay Text Small",
          "default": "said their hair feels like it's growing healthier"
        }
      ],
      "presets": [
        {
            "name": "Image Text Image Overlay Orchid",
            "category": "Featured"
        }
        ]
    }
{% endschema %}
    
    
    