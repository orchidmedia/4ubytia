                        {% endif %}
                        {% if show_compare_icon %}
                            {% render 'header-option-item__compare', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_cart_icon %}
                            {% render 'cart' section: section %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% when 'logo-center__2l' %}
            <div class="{{ container }} sf__header-main-top relative z-[1]">
                <div class="flex sf-menu-logo-bar items-center">
                    <div class="w-2/5 flex flex-grow items-center">
                        {% if show_language_switcher %}
                            {% render 'language-switcher', box_size: '-mx-4' %}
                        {% endif %}
                        {% if show_currency_switcher %}
                            {% render 'currency-switcher' %}
                        {% endif %}
                        {% render 'header-option-item__search', header_settings: section.settings, icon_left: true, size: size, icon_size_override: icon_size_override %}
                    </div>
                    {% render 'header-logo', header_settings: section.settings %}
                    <div class="w-2/5 flex justify-end sf-options-wrapper__desktop items-center">
                        {% if show_account_icon %}
