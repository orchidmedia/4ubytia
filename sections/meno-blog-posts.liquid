    {% when 'color_section6_bg' %}
        {%- assign bg_color = settings.color_section6_bg -%}
    {% else %}
        {%- assign bg_color = settings.color_section1_bg -%}
{% endcase %}

{%- if section.settings.bg_color_override -%}
    {%- assign bg_color = section.settings.background_color -%}
{%- endif -%}

{% capture container %}
    {{ st.container }}
{% endcapture %}

<section id="sf__blog-post-{{ section.id }}" class="sf__blog-post section-pv-{{ section.settings.margin_vertical }} {{ section.settings.custom_class }}{% if st.hide_mobile %} hide-mobile{% endif %}{% if st.hide_tablet %} hide-tablet{% endif %}{% if st.hide_desktop %} hide-desktop{% endif %}" style="background-color: {{ bg_color }};" data-section-id="{{section.id}}">
    <div class="{{ container }}" style="--column-gap: {{ section.settings.column_gap }}px; --column-gap-mobile: {{ section.settings.mobile_gap }}px; --row-gap: {{ section.settings.column_gap | plus: 10 }}px;">
        <!-- {% render 'index-section-header', section_settings: section.settings %} -->

        <div class="max-auto">
            <div class="flex flex-wrap -mx-0 md:-mx-0">
                <div class="w-full {% if show_sidebar %}lg:w-9/12 w-73{% else %}lg:w-12/12 w-100{% endif %} menoguides-categories">
                    {% for link in linklists[st.blog].links %}
                        {% assign blog = link.object %}
                        {% if st.heading_contained %}
                            {% capture center_contained %}
                                style="display:table; margin:auto"
                            {% endcapture %}
                        {% endif %}
                        {% if blog.articles.size > 0  %}
                            <div {{ center_contained }}>
                                <div class="flex justify-between items-end">
                                    {%- capture custom_styles -%}
                                        {%- if st.category_color !='rgba(0,0,0,0)' and st.category_color != blank -%}
                                            color:{{ st.category_color }};
                                        {%- endif -%}
                                    {%- endcapture -%}

                                    {% render 'heading-tag'
										heading: st.category_tag,
										content: blog.title,
										custom_styles: custom_styles
									%}

                                    {% if st.heading_link_hide %}
                                        <a href="{{ blog.url }}" role="button" class="link-5">View All</a>
                                    {% endif %}
                                </div>
                                {% render 'separator' style: st.separator_style %}

                            </div>

                            <!-- <h3>{{ blog.metafields.custom.type }}</h3> -->
                            <div class="relative blog-post-swiper-container">
                                <div class="grid grid-cols-1 grid-cols-2 md:grid-cols-{{ st.column | minus: 1 }} lg:grid-cols-{{ st.column }} gap-9 menoguides-articles-grid meno-adult-grid swiper blog-post-swiper" 
									style="--column-gap: {{ section.settings.column_gap }}px; --column-gap-mobile: {{ section.settings.mobile_gap }}px; --row-gap: {{ section.settings.column_gap | plus: 10 }}px;"
								>
                                    <div role="region" aria-label="Blogs slider" class="relative swiper-wrapper">
                                        {% if blog.articles.size > 0  %}
                                            {% for article in blog.articles limit: blog_to_show %}
                                                {% render 'article-card', article: article, 
                                                   view: st.view, blog_url: blog.url, 
                                                   tag_line_height: section.settings.article_tags_line_height
                                                 %}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                    <div role="region" aria-label="Meno blog carousel" class="swiper-pagination"></div>
                                </div>
                                {% if blog.articles.size > 4 and st.column > 3 %}
                                    {% render 'slider-controls', 
										custom_class: 'hide-tablet', absolute: true, 
										container: true, show_pagination: false,  show_nav: true
									%}
                                {% endif %}
                            </div>

                        {% endif %}
                    {% endfor %}
                </div>
                {% if show_sidebar %}
                    <div class="w-full lg:w-3/12 {% if st.design == "layout3"%}sidebar-design-03 w-25{% endif %}">

                        <div class="sf-block-aside">
                            <h4>Popular Guides</h4>
                            <hr>

                            <div class="sf-aside-content">
                                <ul class="sf-list-menu">
                                    {%- for article in blog.articles limit: 5 -%}
                                        <li>
                                            <a href="{{ article.url }}" class="link-2">
                                                <span class="sf__title-count">&#x2022;
                                                    {{ article.title }}
                                                </span>
                                            </a>
                                        </li>
                                    {%- endfor -%}
                                </ul>
                            </div>
                        </div>

                        {%- if blog.all_tags != blank -%}
                            <div class="sf-block-aside">
                                {% if section.settings.design == "layout3" %}
                                    <h4>Browse by topic</h4>
                                    <hr>
                                {% else %}
                                    <h3 class="sf-aside-title">Browse by topic</h3>
                                {% endif %}
                                {% if template contains 'blog' %}
                                    {% assign tag_list = current_tags %}
                                {% else %}
                                    {% assign tag_list = article.tags %}
                                {% endif %}
                                <div class="sf-aside-content sf-aside-tags">
                                    {% for link in linklists.blogs.links %}
                                        {% assign blogForTags = link.object %}
                                        {%- for tag in blogForTags.all_tags -%}
                                            <a 
												href="{{ blogForTags.url }}/tagged/{{ tag | handle }}" 
												role="button" 
												class="button-5 {% if tag_list contains tag %}active{% endif %}"
											>
												{{ tag }}
                                            </a>
                                        {%- endfor -%}
                                    {%- endfor -%}
                                </div>
                            </div>
                        {%- endif -%}

                        {% render 'blog-sidebar' %}

                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</section>

