                    {% render 'header-main-menu-container', section: section, box_size: 'flex-grow-[2] flex-shrink', justify: 'justify-center' %}
                    <div class="flex flex-1 justify-end items-center">
                        {% if show_language_switcher %}
                            {% render 'language-switcher', box_size: 'hidden xl:block' %}
                        {% endif %}
                        {% if show_currency_switcher %}
                            {% render 'currency-switcher', box_size: 'hidden xl:block' %}
                        {% endif %}
                        {% render 'header-option-item__search', header_settings: section.settings, size: size, icon_size_override: icon_size_override %}
                        {% if show_account_icon %}
                            {% render 'header-option-item__account', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_wishlist_icon %}
                            {% render 'header-option-item__wishlist', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_compare_icon %}
                            {% render 'header-option-item__compare', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_cart_icon %}
                            {% render 'cart' %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% when 'logo-left-menu-left' %}
            <div class="{{ container }} relative z-[1]">
                <div class="sf-menu-logo-bar flex -mx-4 items-center">
                    {% render 'header-logo', header_settings: section.settings, box_size: 'flex-1', justify: 'justify-start' %}
                    {% render 'header-main-menu-container', section: section, box_size: 'flex-grow-[2] flex-shrink', justify: 'justify-start' %}
