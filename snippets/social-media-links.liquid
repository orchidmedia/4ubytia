<!-- /snippets/social-media-links.liquid -->
{%- assign display = 'block' -%}
{%- if show_mobile == false -%}
  {%- assign display = 'none' -%}
{%- endif -%}

<style>
  @media screen and (max-width: 768px) {
    .show-mobile {
      display: {{ display }};
    }
  }
</style>

<div class="show-mobile">
  {% if show_label == nil %}
    {% assign show_label = false %}
  {% endif %}
  <div class="social-media-links {{ box_size }} flex items-center {{ extra_classes }} {% if centermd %} md:justify-center {% endif %}">
    {% if settings.social_pinterest_link != blank %}
      <a target="_blank" aria-label="Follow us on Pinterest" class="px-2 flex items-center" href="{{ settings.social_pinterest_link }}" rel="noreferrer">
          {% render 'icon', name: 'pinterest', size: size, size_mobile: size_mobile, icon_select: icon_select, icon_size_override: icon_size_override %}
          {% if settings.social_pinterest_label != blank and show_label %}
            <span class="pl-2.5 pr-4">{{ settings.social_pinterest_label }}</span>
          {% endif %}
      </a>
    {% endif %}
    {% if settings.social_facebook_link != blank %}
      <a target="_blank" aria-label="Follow us on Facebook" class="px-2 flex items-center" href="{{ settings.social_facebook_link }}" rel="noreferrer">
