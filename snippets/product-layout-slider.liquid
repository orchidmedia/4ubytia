{% if is_mobile == true %}
  {% assign layout = section.settings.layout_mobile %}
{% else %}
  {% assign layout = section.settings.layout %}
{% endif %}
<div class="sf-prod__{{ layout }} layout-slider-1">
    {% case layout %}
        {% when 'layout-4' %}
            <div class="container">
                <div class="flex flex-wrap sf-prod__block sf-prod__container">
                    <div class="w-full {%if section_layout == 'fifty_fifty'%} col-lg-6 {%elsif section_layout == 'sixty_forty'%} col-lg-4 {%elsif section_layout == 'seventy_thirty'%} col-lg-3{%else%} md:w-1/2  {%endif%}">
                      {% render 'product-page__info' %}
                    </div>
                    <div class="w-full {%if section_layout == 'fifty_fifty'%} col-lg-6 {%elsif section_layout == 'sixty_forty'%} col-lg-8 {%elsif section_layout == 'seventy_thirty'%} col-lg-9{%else%} md:w-1/2 {%endif%} ">
                      <div class="sf-prod-media__wrapper">
                        <div class="sf-product-media__desktop hidden md:block">
                          {% render 'product-page__slider-1', product_layout: layout %}
                        </div>
                        <div class="sf-product-media__mobile md:hidden">
                          {% render 'product-page-mobile-media' %}
                        </div>
                      </div>
                    </div>
                    <div class="w-full {%if section_layout == 'fifty_fifty'%} col-lg-6 {%elsif section_layout == 'sixty_forty'%} col-lg-4 {%elsif section_layout == 'seventy_thirty'%} col-lg-3{%else%} md:w-1/2  {%endif%}">
                        {% render 'product-page__info' %}
                    </div>
                </div>
            </div>
        {% when 'layout-5' %}
            <div class="sf-prod__block flex flex-wrap sf-prod__container">
                <div class="w-full {%if section_layout == 'fifty_fifty'%} col-lg-6 {%elsif section_layout == 'sixty_forty'%} col-lg-8 {%elsif section_layout == 'seventy_thirty'%} col-lg-9{%else%} md:w-1/2 {%endif%} flex-1">
                  <div class="sf-prod-media__wrapper">
                        <div class="sf-product-media__desktop hidden md:block">
                          {% render 'product-page__slider-1', product_layout: layout %}
                        </div>
                        <div class="sf-product-media__mobile md:hidden">
                          {% render 'product-page-mobile-media' %}
                        </div>
                      </div>
                </div>
                <div class="w-full {%if section_layout == 'fifty_fifty'%} col-lg-6 {%elsif section_layout == 'sixty_forty'%} col-lg-4 {%elsif section_layout == 'seventy_thirty'%} col-lg-3{%else%} md:w-1/2  {%endif%} sf-prod__summary">
                    {% render 'product-page__info' %}
                </div>
            </div>
        {% when 'layout-6' %}
            <div class="sf-prod__block flex flex-wrap sf-prod__container">
                <div class="w-full {%if section_layout == 'fifty_fifty'%} col-lg-6 {%elsif section_layout == 'sixty_forty'%} col-lg-8 {%elsif section_layout == 'seventy_thirty'%} col-lg-9{%else%} md:w-1/2 {%endif%}">
                  <div class="sf-prod-media__wrapper">
                    <div class="sf-product-media__desktop hidden md:block">
                      {% render 'product-page__slider-1', product_layout: layout %}
                    </div>
                    <div class="sf-product-media__mobile md:hidden">
                      {% render 'product-page-mobile-media' %}
                    </div>
                  </div>
                </div>
                <div class="w-full {%if section_layout == 'fifty_fifty'%} col-lg-6 {%elsif section_layout == 'sixty_forty'%} col-lg-4 {%elsif section_layout == 'seventy_thirty'%} col-lg-3{%else%} md:w-1/2  {%endif%}">
                    {% render 'product-page__info' %}
                </div>
            </div>
    {% endcase %}
</div>
