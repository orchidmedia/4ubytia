<section class="md:m-24 my-16">
    <div class="flex justify-center md:justify-between items-center mb-8 text-center md:text-left">
    <h2 class="text-2xl font-noto ">Best Sellers</h2>
    <div class="p-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="67" height="18" viewBox="0 0 67 18" fill="none">
            <path d="M2 10.857C4.44444 12.7618 10.572 15.9998 15.6667 15.9998C25 15.9998 29.6667 2 21.6667 2C13.6667 2 16.056 15.9499 33 15.9998C46.9999 16.0411 48.6667 10.2856 48.6667 7.42849C48.6667 5.99994 48.3333 2 44 2C40.3333 2 39.3333 5.71423 39.3333 7.42849C39.3333 11.1427 43 15.7141 52 15.7141C59.2 15.7141 63 12.5713 65 10.857" stroke="black" stroke-width="3.6" stroke-linecap="round"/>
        </svg>
    </div>
    <a href="#" class="text-gray-600 hidden md:block font-noto">SHOP ALL</a>
    </div>
    <div class="grid grid-cols-4 gap-4">
    <div class="md:col-span-1 col-span-2 ">
        <div class="h-[31rem] md:h-[56rem]  bg-cover bg-center text-white flex items-center text-center p-4" style="background-image: url('{{ section.settings.featured_image | img_url: 'master' }}');">
        <h3 class="text-4xl font-custom w-full line-clamp-2">{{ section.settings.featured_title }}</h3>
        </div>
    </div>
    {% for block in section.blocks %}
        <div class="md:col-span-1 col-span-2 group">
        <div class="border p-4 flex flex-col items-center relative ">
            {% if block.settings.product_image %}
            <img src="{{ block.settings.product_image | img_url: 'master' }}" alt="{{ block.settings.product_name }}" class="h-72 md:h-[46rem] w-full object-cover">
            {% else %}
            <div class="fpo"></div>
            {% endif %}
            {% if block.settings.is_new %}
            <div class="flex items-center justify-center bg-blue-300 w-24 h-24 text-center text-black font-noto px-2 py-1 rounded-full mt-2 absolute right-4">NEW</div>
            {% endif %}
            <a href="/cart/add?id={{ block.settings.product.selected_or_first_available_variant.id }}&quantity=1" class="hidden group-hover:flex items-center justify-center w-64 h-12 bg-[#00C389] rounded-3xl absolute bottom-12 font-noto">
            ADD TO BAG
            </a>

        </div>
        <div class="text-center" >
            <h3 class="text-base font-noto mt-4">{{ block.settings.product_name }}</h3>
            <p class="text-sm font-noto text-gray-600 mt-2 w-1/2 m-auto">{{ block.settings.product_description }}</p>
            <span class="text-gray-800 font-noto font-bold mt-2">{{ block.settings.product_price }}</span>
        </div>
        </div>
    {% endfor %}
    <div class="md:hidden col-span-1  w-screen flex justify-center items-center">
        <a href="/collections/all" class="button sf__btn sf__btn-blank-light text-base text-black px-4 py-2 rounded-3xl font-noto">SHOP NOW</a>
    </div>
    </div>
</section>

{% schema %}
{
    "name": "Best Sellers",
    "settings": [
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image"
    },
    {
      "type": "text",
      "id": "featured_title",
      "label": "Featured Title",
      "default": "Elevate Your Curls"
    }
    ],
    "blocks": [
    {
        "type": "product",
        "name": "Product",
        "settings": [
        {
            "type": "image_picker",
            "id": "product_image",
            "label": "Product Image"
        },
        {
            "type": "text",
            "id": "product_name",
            "label": "Product Name"
        },
        {
            "type": "text",
            "id": "product_description",
            "label": "Product Description"
        },
        {
            "type": "text",
            "id": "product_price",
            "label": "Product Price"
        },
        {
            "type": "checkbox",
            "id": "is_new",
            "label": "New Product"
        },
        {
            "type": "product",
            "id": "product",
            "label": "Product"
        }

        ]
    }
    ],
    "presets": [
    {
        "name": "Best Sellers Orchid",
        "category": "Featured"
    }
    ]
}
{% endschema %}