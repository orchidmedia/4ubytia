{% assign show_language_switcher = section.settings.show_language_switcher %}
{% assign show_currency_switcher = section.settings.show_currency_switcher %}
{% assign search_settings = section.settings.search %}
{% assign show_account_icon = section.settings.show_account_icon %}
{% assign show_wishlist_icon = section.settings.show_wishlist_icon %}
{% assign show_compare_icon = section.settings.show_compare_icon %}
{% assign show_cart_icon = section.settings.show_cart_icon %}
{% assign size = section.settings.icon_size %}
{% assign size_mobile = section.settings.icon_size_mobile %}
{% assign icon_size_override = section.settings.icon_size_override %}

{% assign design = section.settings.header_design %}

{% assign container = section.settings.container %}
{% if container == 'w-full' %}
  {% assign container = container | append: ' px-4' %}
{% endif %}
<header
    class="hidden lg:block bg-white sf-header__desktop {{ design }}"
    data-screen="sf-header__desktop"
    data-transparent="{{ transparent_on_top }}"
>
    <div class="sf-header__bg pointer-events-none"></div>
    <div class="sf-header__dropdown-bg absolute top-full left-0 right-0 pointer-events-none"></div>
    {% case design %}
        {% when 'logo-center-menu-left' %}
            <div class="{{ container }} relative z-[1]">
                <div class="sf-menu-logo-bar flex -mx-4 items-center">
                    {% render 'header-main-menu-container', section: section, box_size: 'flex-5' %}
                    {% render 'header-logo', header_settings: section.settings, box_size: 'flex-2' %}
                    <div class="flex flex-grow flex-6 justify-end items-center">
                        {% if show_language_switcher %}
                            {% render 'language-switcher', box_size: 'hidden xl:block' %}
                        {% endif %}
                        {% if show_currency_switcher %}
                            {% render 'currency-switcher', box_size: 'hidden xl:block' %}
                        {% endif %}
                        {% render 'header-option-item__search', header_settings: section.settings, size: size, icon_size_override: icon_size_override %}
                        {% if show_account_icon %}
                            {% render 'header-option-item__account', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_wishlist_icon %}
                            {% render 'header-option-item__wishlist', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_compare_icon %}
                            {% render 'header-option-item__compare', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_cart_icon %}
                            {% render 'cart', section: section %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% when 'both-center' %}
            <div class="{{ container }} relative z-[1]">
                <div class="sf-menu-logo-bar flex -mx-4 items-center">
                    <div class="flex flex-grow w-1/6 items-center">
                        {% if show_language_switcher %}
                            {% render 'language-switcher', box_size: 'hidden xl:block' %}
                        {% endif %}
                        {% if show_currency_switcher %}
                            {% render 'currency-switcher', box_size: 'hidden xl:block' %}
                        {% endif %}
                        {% render 'header-option-item__search', header_settings: section.settings, icon_left: true, size: size, icon_size_override: icon_size_override %}
                    </div>
                    {% render 'header-main-menu-container', section: section, box_size: 'w-1/4', justify: 'justify-end' %}
                    {% render 'header-logo', header_settings: section.settings %}
                    {% render 'header-main-menu-container', section: section, menu: 'secondary_menu', box_size: 'w-1/4' %}
                    <div class="w-1/6 flex justify-end sf-options-wrapper__desktop items-center">
                        {% if show_account_icon %}
                            {% render 'header-option-item__account', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_wishlist_icon %}
                            {% render 'header-option-item__wishlist', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_compare_icon %}
                            {% render 'header-option-item__compare', display_by: 'icon', size: size, icon_size_override: icon_size_override %}
                        {% endif %}
                        {% if show_cart_icon %}
                            {% render 'cart' section: section %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% when 'logo-center-menu-drawer' %}
            <div class="{{ container }} relative z-[1]">
                <div class="sf-menu-logo-bar flex -mx-4 items-center">
                    {% render 'header-option-item__hamburger-button', box_size: 'flex w-1/3' %}
                    {% render 'header-logo', header_settings: section.settings %}
