            </div>
        {% when 'logo-left__2l' %}
            <div class="{{ container }} sf__header-main-top">
                <div class="flex sf-menu-logo-bar -mx-4 items-center py-2">
                    {% render 'header-logo', header_settings: section.settings, box_size: 'justify-start' %}
                    <div class="sf-menu-bar">
                        {% render 'header-main-menu-container', section: section %}
                    </div>
                    <div class="w-2/3 flex flex-grow justify-end items-center">
                        {% render 'header-option-item__search', header_settings: section.settings, size: size, icon_size_override: icon_size_override %}
                        {% if show_language_switcher %}
