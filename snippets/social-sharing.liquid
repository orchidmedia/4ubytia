{% if url == blank %}
  {% assign url = canonical_url %}
{% endif %}

<div class="sf-sharing__socials {{ class }}">
  <!-- <label class="font-medium mr-5">{{ 'products.product.social_share' | t }}:</label> -->
  <div class="sf-sharing__socials-list flex">
    {% if settings.share_twitter %}
      <a href="https://twitter.com/intent/tweet?url={{ url }}" target="_blank" class="mr-4 inline-flex items-center justify-center">
        {% render 'icon', name: 'twitter', size: size, size_mobile: size_mobile, icon_size_override: icon_size_override %}
      </a>
    {% endif %}
    {% if settings.share_pinterest %}
      <a href="https://pinterest.com/pin/create/button/?url={{ url }}" target="_blank" class="mr-4 inline-flex items-center justify-center">
        {% render 'icon', name: 'pinterest', size: size, size_mobile: size_mobile, icon_size_override: icon_size_override %}
      </a>
    {% endif %}
    {% if settings.share_facebook %}
      <a href="https://www.facebook.com/sharer/sharer.php?u={{ url }}" target="_blank" class="mr-4 inline-flex items-center justify-center">
        {% render 'icon', name: 'facebook', size: size, size_mobile: size_mobile, icon_size_override: icon_size_override %}
      </a>
    {% endif %}
    {% if settings.share_email %}
    <a href="mailto:?body=Stripes: {{canonical_url }}" target="_blank" class="mr-4 inline-flex items-center justify-center">
      {% render 'icon', name: 'envelope-share', size: size, size_mobile: size_mobile, icon_size_override: icon_size_override %}
    </a>
  {% endif %}
  </div>
</div>

