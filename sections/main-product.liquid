    {%- assign bg_color = settings.color_section5_bg -%}
  {% when 'color_section6_bg' %}
    {%- assign bg_color = settings.color_section6_bg -%}
  {% else %}
    {%- assign bg_color = settings.color_section1_bg -%}
{% endcase %}
{%- if section.settings.bg_color_override -%}
  {%- assign bg_color = section.settings.background_color -%}
{%- endif -%}
{% if layout == 'layout-7' %}
  {% assign container = 'w-full' %}
{% endif %}
<section
    data-section-type="product-page"
    data-section-id="{{ section.id }}"
    data-layout="{{ layout }}"
    data-enable-history-state="true"
    data-product-handle="{{ product.handle }}"
    data-product-id="{{ product.id }}"
    data-container="{{ container }}"
    class="product-template section-pv-{{ section.settings.margin_vertical }} {% if st.hide_mobile %} hide-mobile{% endif %}{% if st.hide_tablet %} hide-tablet{% endif %}{% if st.hide_desktop %} hide-desktop{% endif %}{% if st.custom_class != blank %} {{st.custom_class}}{% endif %}"
    style="background-color:{{ bg_color }};"
>

    <div class="{{ container }}">
        <!-- Product template: desktop content -->
        <div id="sf-prod-template" class="sf-prod-template sf-prod-template__desktop">
            {% case section.settings.layout %}
                {% when 'layout-1' %}
                    {% render 'product-layout-1', section: section,section_layout: section.settings.product_section_layout %}
                {% when 'layout-2' %}
                    {% render 'product-layout-2', section: section,section_layout: section.settings.product_section_layout %}
                {% when 'layout-3' %}
                    {% render 'product-layout-3', section: section,section_layout: section.settings.product_section_layout  %}
                {% when 'layout-4' %}
                    {% render 'product-layout-slider', section: section,section_layout: section.settings.product_section_layout  %}
                {% when 'layout-5' %}
                    {% render 'product-layout-slider', section: section,section_layout: section.settings.product_section_layout  %}
                {% when 'layout-6' %}
                    {% render 'product-layout-slider', section: section,section_layout: section.settings.product_section_layout  %}
                {% when 'layout-7' %}
                    {% render 'product-layout-slider-full', section: section,section_layout: section.settings.product_section_layout  %}
                {% else %}
                    {% render 'product-layout-1', section: section,section_layout: section.settings.product_section_layout  %}
            {% endcase %}
        </div>
    {%- for block in section.blocks -%}
      {% if block.type == 'addons' and block.settings.show_ask_a_question %}
        {% render 'form__ask-a-question' %}
        {% break %}
      {% endif %}
    {%- endfor -%}
  </div>

    <!-- Product template: additional contents -->
    {% if section.settings.use_sticky_atc or section.settings.use_sticky_atc_on_mobile %}
        {% render 'sticky-atc', section_settings: section.settings, enable_dynamic_checkout: section.settings.enable_dynamic_checkout %}
    {% endif %}
</section>

