{%- assign meno = section.settings -%}
<section class="blog_header_menoguides">
    <div class="container">
        {% render 'heading-tag'
            heading: meno.tag_title,
            content: meno.title,
            custom_classes: 'text-center w-full block',
            custom_styles: custom_styles
        %}
        {% render 'heading-tag'
            heading: meno.tag_subtitle,
            content: meno.sub_title,
            custom_classes: 'text-center w-full block',
            custom_styles: custom_styles
        %}
    </div>
</section>

{% if meno.enable_search %}
    <section class="blog_search_menoguides">
        <div class="container-fluid">
            <div class="sf-search-form flex items-center">
                <form action="/search" method="GET" novalidate="" class="offsetField w-full">
                    <input type="hidden" name="type" value="article">
                    <input type="text" name="q" required="" autocomplete="off" placeholder="Start your topic search here..." aria-label="Start your topic search here..." class="offsetDesktopSearchField">
                </form>
            
                <button type="submit" class="py-2 px-3">
                    <span class="sf__tooltip-item block sf__tooltip-bottom sf__tooltip-style-2">
                        <svg width="30" fill="currentColor" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                            <path d="M508.5 468.9L387.1 347.5c-2.3-2.3-5.3-3.5-8.5-3.5h-13.2c31.5-36.5 50.6-84 50.6-136C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c52 0 99.5-19.1 136-50.6v13.2c0 3.2 1.3 6.2 3.5 8.5l121.4 121.4c4.7 4.7 12.3 4.7 17 0l22.6-22.6c4.7-4.7 4.7-12.3 0-17zM208 368c-88.4 0-160-71.6-160-160S119.6 48 208 48s160 71.6 160 160-71.6 160-160 160z"></path>
                        </svg>
                    </span>
                </button>
            </div>
        </div>
    </section>
    
{% endif %}

{%- style -%}
    .blog_header_menoguides{
        padding:43px 0 35px;
        background-color:{{ meno.bg_color}};
        background-image: url({{ meno.image_svg_left }}), url({{ meno.image_svg_right }});
        background-repeat: no-repeat, no-repeat;
        background-position:left, right;
        background-size: contain;
    }
    .blog_header_menoguides h3{
        font-family: 'Rhymes Display Regular';
        font-size: 24px;
        font-weight: normal;
        padding-top: 12px;
        color:#333333;
    }

    .blog_search_menoguides{
        margin-top:50px;
    }
    .blog_search_menoguides .sf-search-form {
        height:auto;
        border-bottom: 2px solid;
    }

    .blog_search_menoguides input.offsetDesktopSearchField {
        border: 0;
        border-radius: 0;
        padding-left: 10px;
        padding-right: 0px;
        width: 100%;
        font-size: 24px;
        font-weight: 500;
    }

    @media (max-width:767px){
        .blog_header_menoguides{
            background-image:none;
            padding:43px 0;
        }
        .blog_header_menoguides h3{
            font-size:16px;
            padding-top: 8px;
        }
        .blog_search_menoguides{
            margin-top: 40px;
            padding: 0 16px;
        }
    }
{%- endstyle -%}

